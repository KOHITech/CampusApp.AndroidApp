<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="158dp"
        app:srcCompat="@mipmap/profile_face"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:width="250dp"
        android:id="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Omar El Ballouti"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="105dp"
        android:gravity="center"
        android:layout_gravity="left"
        android:id="@+id/textView4" />

    <TextView
    android:text="Description :"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@android:color/holo_green_dark"
    android:layout_marginTop="230dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/textView5" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:background="@drawable/shadow_box"
        android:id="@+id/button2" />

    <TextView
        android:text="Resting on a multidisciplinary educational system, Omar is one of the most successful IT consultants in the continent. His exceptional abilities in Data mining and complex system handling made him simply a reference in the BigData community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/textView6" />

    <TextView
        android:text="Personal information :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView7" />

    <TextView
        android:text="Mail adress :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView8" />

    <TextView
        android:text="Telephone number :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView9" />

    <TextView
        android:text="university level :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView10" />

    <TextView
        android:text="Activities :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView11" />

    <TextView
        android:text="Member at :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView12" />


</FrameLayout>