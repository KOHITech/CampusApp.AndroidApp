<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="158dp"
                app:srcCompat="@mipmap/profile_face"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:width="250dp"
                android:id="@+id/imageView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Omar El Ballouti"
                android:layout_below="@+id/imageView4"
                android:layout_marginLeft="105dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:id="@+id/textView4" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="20dp"
                android:id="@+id/description">

                <TextView
                    android:text="Description :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_below="@+id/textView4"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/textView5" />

                <Button
                    android:text="Edit"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_below="@+id/textView4"
                    android:layout_weight="0.2"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shadow_box"
                    android:id="@+id/button2" />

            </android.support.v7.widget.LinearLayoutCompat>

        <TextView
            android:text="Resting on a multidisciplinary educational system, Omar is one of the most successful IT consultants in the continent. His exceptional abilities in Data mining and complex system handling made him simply a reference in the BigData community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView6" />

        <TextView
            android:text="Personal information :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView7" />

        <TextView
            android:text="Mail adress :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView8" />

        <TextView
            android:text="Telephone number :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView9" />

        <TextView
            android:text="university level :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView10" />

        <TextView
            android:text="Activities :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView10"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView11" />

        <TextView
            android:text="Member at :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView12" />

        <TextView
            android:text="Member at 2 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView13" />

    </RelativeLayout>

</ScrollView>

</FrameLayout>